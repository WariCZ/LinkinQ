{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "incremental": true,
    "allowJs": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "src/lib/bpmn-web/datastore"]
}
